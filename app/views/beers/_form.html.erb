<%= semantic_form_for @beer do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>

    <%= f.semantic_fields_for :notes do |note| %>
    	<%= note.input :value, :as => :number, label: "Note : "%>
    	<%= note.input :_destroy, :as => :boolean, label: "Delete" %>
    	<%= note.input :beer_geek_id, value: current_beer_geek.id, :as => :hidden %>
    <%end%>

    <%= f.actions %>
<% end %>
